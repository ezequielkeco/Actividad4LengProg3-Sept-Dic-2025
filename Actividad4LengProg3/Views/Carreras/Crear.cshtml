@model Actividad4LengProg3.Models.CarreraViewModel
@{
    ViewData["Title"] = "Registrar Carrera";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <h3 class="mb-3 text-success">@ViewData["Title"]</h3>

        <form asp-action="Crear" method="post" class="row g-3">
            <div class="col-md-4">
                <label asp-for="Codigo" class="form-label"></label>
                <input asp-for="Codigo" class="form-control" placeholder="Ej. C001" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ej. Ingeniería en Sistemas" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CantidadCreditos" class="form-label"></label>
                <input asp-for="CantidadCreditos" class="form-control" type="number" />
                <span asp-validation-for="CantidadCreditos" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CantidadMaterias" class="form-label"></label>
                <input asp-for="CantidadMaterias" class="form-control" type="number" />
                <span asp-validation-for="CantidadMaterias" class="text-danger"></span>
            </div>

            <div class="col-12 text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                <button type="submit" class="btn btn-success">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
