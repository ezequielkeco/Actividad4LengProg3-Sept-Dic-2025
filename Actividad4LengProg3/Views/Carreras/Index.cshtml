@model List<Actividad4LengProg3.Models.CarreraViewModel>
@{
    ViewData["Title"] = "Lista de Carreras";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <div class="d-flex justify-content-between mb-3">
            <h3>@ViewData["Title"]</h3>
            <a asp-action="Crear" class="btn btn-success">Nueva Carrera</a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }

        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Código</th>
                    <th>Nombre de la carrera</th>
                    <th>Cant. de Créditos</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Codigo</td>
                        <td>@c.Nombre</td>
                        <td>@c.CantidadCreditos</td>
                        <td>
                            <a asp-action="Editar" asp-route-codigo="@c.Codigo" class="btn btn-warning btn-sm">Editar</a>
                            <form asp-action="Eliminar" method="post" class="d-inline">
                                <input type="hidden" name="codigo" value="@c.Codigo" />
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
